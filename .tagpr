# tagpr configuration
# Ref: https://github.com/Songmu/tagpr
[tagpr]
# tagpr.releaseBranch (default: "main")
# The branch for releases. tagpr tracks this branch, creates or updates a pull request as a release candidate, or tags when they are merged.
# releaseBranch = "main"

# tagpr.versionFile
# Versioning file containing the semantic version needed to be updated at release. It will be synchronized with the "git tag".
# Often this is a meta-information file such as gemspec, setup.cfg, package.json, etc.
# Sometimes the source code file, such as version.go or Bar.pm, is used.
# If you do not want to use versioning files but only git tags, specify the "-" string here.
# You can specify multiple version files by comma separated strings.
versionFile = "Cargo.toml"

# tagpr.vPrefix (default: true)
# Flag whether or not v-prefix is added to semver when git tagging. (e.g. v1.2.3 if true)
# This is only a tagging convention, not how it is described in the version file.
# vPrefix = true

# tagpr.changelog (Optional)
# Flag whether or not changelog is added or changed during the release.
changelog = true

# tagpr.command (Optional)
# Command to change files just before release and versioning.
command = [
	"cargo build --release",
]

# tagpr.postVersionCommand (Optional)
# Command to change files just after versioning.
# postVersionCommand = ["command", "after", "versioning"]

# tagpr.template (Optional)
# Pull request template file in go template format
# template = "path/to/template.txt"

# tagpr.templateText (Optional)
# Pull request template text in go template format
template = """
## What's Changed

{{ range .Changes }}
- {{ . }}
{{ end }}

**Full Changelog**: {{ .Permalink }}
"""

# tagpr.release (Optional)
# GitHub Release creation behavior after tagging [true, draft, false]
# If this value is not set, the release is to be created.
# release = true

# tagpr.majorLabels (Optional)
# Label of major update targets. Default is [major]
# majorLabels = ["major"]

# tagpr.minorLabels (Optional)
# Label of minor update targets. Default is [minor]
# minorLabels = ["minor"]

# tagpr.commitPrefix (Optional)
# Prefix of commit message. Default is "[tagpr]"
# commitPrefix = "[tagpr]"
